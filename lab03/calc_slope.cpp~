
//Calculates Slope of the Line
// Input Variables: x1,y1-coordinates of point 1, x2,y2-coordinates of point 2





#include <stdio.h>
int main(){
  float x1,y1,x2,y2;
  float slope;
  printf("Input two points on the line, starting with the x,y:\n");
  printf(" coordinates of the first point");
  
  scanf("%f %f %f %f", &x1, &y1,&x2,&y2);
  printf("Coordinates of Point1: x1=%5.2f y1= %5.2f\n", x1,y1);
  printf("Coordinates of Point2: x2=%5.2f y2= %5.2f\n", x2,y2);
  if(x1 != x2)
    {
      slope=(y2-y1)/(x2-x1);
      printf("Slope of the Line: %5.2\n",slope);
    }
  else
    printf("line is vertical\n");

 
   return 0;
}
